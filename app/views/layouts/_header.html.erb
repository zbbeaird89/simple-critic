<!-- Navigation -->
<div class="container">
  <nav class="navbar navbar-expand-lg">
    <%= link_to image_tag("logo.svg", class: "logo"), root_path, class: "navbar-brand" %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
      <i class="fa fa-bars fa-2x" aria-hidden="true"></i>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Movies", movies_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "About", about_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" data-toggle="dropdown">
            Account
          </a>

          <div class="col-sm-5 m-auto dropdown-menu text-center">
            <% if user_signed_in? %>
              <%= link_to "Profile", user_path(current_user), class: "dropdown-item" %>
              <%= link_to "Log Out", destroy_user_session_path, :method => :delete, class: "dropdown-item" %>
            <% else %>
              <%= link_to "Sign Up", new_user_registration_path, class: "dropdown-item" %>
              <%= link_to "Log In", new_user_session_path, class: "dropdown-item" %>
            <% end %>
          </div>
        </li>
      </ul>
    </div>
  </nav>
</div>
